<section class="section">
  <h2 class="title">{{ section.settings.instagramFeed_title }}</h2>
  <div id="instagram-feed1"></div>
</section>

<script>
(function(){
    new InstagramFeed({
        'username': 'br4veheart',
        'container': document.getElementById("instagram-feed1"),
        'display_profile': true,
        'display_biography': true,
        'display_gallery': true,
        'display_captions': true,
        'display_igtv': false,
        'max_tries': 8,
        'callback': null,
        'styling': true,
        'items': 8,
        'items_per_row': 4,
        'margin': 1,
        'lazy_load': true,
        'on_error': console.error
    });
})();
</script>

{% schema %}
{
    "name": "InstagramFeed",
    "tag": "section",
    "settings": [
        {
            "type": "text",
            "id": "instagramFeed_title",
            "label": "Title",
            "default": "InstagramFeed"
        },
        {
            "type": "header",
            "content": "Instagram"
        },
        {
            "type": "text",
            "id": "instagramFeed_username",
            "label": "Username",
            "default": "shopify"
        },
        {
            "type": "header",
            "content": "Display Options"
        },
        {
          "type": "select",
          "id": "instagramFeed_display_profile",
          "options": [
              { "value": "true", "label": "True"},
              { "value": "false", "label": "False"}
          ],
          "label": "Display Profile",
          "default": "true",
          "info": "Enables displaying the profile."
        },
        {
          "type": "select",
          "id": "instagramFeed_display_biography",
          "options": [
              { "value": "true", "label": "True"},
              { "value": "false", "label": "False"}
          ],
          "label": "Display Biography",
          "default": "true",
          "info": "Enables displaying the biography."
        },
        {
          "type": "select",
          "id": "instagramFeed_display_gallery",
          "options": [
              { "value": "true", "label": "True"},
              { "value": "false", "label": "False"}
          ],
          "label": "Display Gallery",
          "default": "true",
          "info": "Enables displaying the gallery."
        },
        {
          "type": "select",
          "id": "instagramFeed_display_captions",
          "options": [
              { "value": "true", "label": "True"},
              { "value": "false", "label": "False"}
          ],
          "label": "Display Captions",
          "default": "true",
          "info": "Enables displaying captions for each post as overlay on hover."
        },
        {
          "type": "select",
          "id": "instagramFeed_display_igtv",
